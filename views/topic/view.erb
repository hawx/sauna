<div class="login-bar">
  <% if logged_in? %>
    <p>You're logged in as <%= current_user.username %> (<%= current_user.rank %>)</p>
  <% else %>
    <p>You're not logged in <a href="/login">Login</a></p>
  <% end %>
</div>

<h1><%= @topic.name %></h1>
<div class="author-info">
  <%= @topic.creator.username %><br/>
  <span class="rank"><%= @topic.creator.rank %></span>
</div>
<div class="meta"><%= @topic.created_at_string %></div>

<ul class="post-list">
<% @topic.posts.all.each do |post| %>
  <li>
    <div class="author-info">
      <%= post.creator.username %>
    </div> 
    <%= post.content %>
    </li>
<% end %>
</ul>
<%= @topic.posts.all.size %> posts.

<a href="/topic/view/<%= @topic.id %>/new">New Post</a>