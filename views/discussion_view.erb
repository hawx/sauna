<ul class="discussion-list">
  <li>
    <header>
      <h1>
        <a href="<%= @discussion.url %>">
          <%= @discussion.name %>
        </a>
      </h1>
    </header>
    
    <ul class="post-list">
    <% @discussion.posts.all.each do |post| %>
      <li>
        <header>
          <h1><a href="<%= post.url %>"><%= post.title %></a></h1>
          <div class="meta">
            Started by <a href="<%= post.creator.url %>"><%= post.creator.username %></a>
          </div>
        </header>
        <div class="post-count"><%= post.comments.size %></div>
        <div class="recent-post-info">
          <time><a href="#"><%= post.updated_at_short_string %></a></time><br/>
          by <a href="<%= post.updater.url %>"><%= post.updater.username %></a>
        </div>
      </li>
    <% end %>
    </ul>
    <%= @discussion.posts.all.size %> posts.
    
    <a href="<%= @discussion.url %>/post/new">New Post</a>
  </li>
</div>